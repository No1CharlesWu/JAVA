<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.charles.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name="me.charles.sample.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".EnterActivity"
            android:label="@string/app_name">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->

                <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name=".demo_flow.MainActivity"
            android:launchMode="singleTask"/>

        <activity
            android:name="me.charles.sample.demo_wechat.MainActivity"
            android:launchMode="singleTask">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
        </activity>

        <activity
            android:name=".demo_zhihu.MainActivity"
            android:launchMode="singleTask"/>

        <activity
            android:name=".demo_flow.SwipeBackSampleActivity"
            android:theme="@style/AppTheme.NoActionBar.SwipeBack"/>

        <receiver android:name="me.charles.sample.demo_wechat.net.AlertReceiver">
            <intent-filter>
                <action android:name="CLOCK"/>
            </intent-filter>
        </receiver>

        <service android:name="me.charles.sample.demo_wechat.net.AlertService"
            android:enabled="true" />

    </application>

</manifest>
